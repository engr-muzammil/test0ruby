<main class="form-signin">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <img class="mb-4" src="https://getbootstrap.com/docs/5.1/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
  <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
  <div class="form-floating mb-2">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "floatingInput", placeholder: "name@example.com" %>
      <label for="floatingInput"><%= f.label :email %></label>
  </div>
  <div class="form-floating">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "floatingPassword", placeholder: "Password" %>
    <label for="floatingPassword"><%= f.label :password %></label>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign in" , class: "w-100 btn btn-lg btn-primary" %>
  </div>
  <p class="mt-5 mb-3 text-muted">© 2017–2021</p>
<% end %>
</main>
<%= render "devise/shared/links" %>
