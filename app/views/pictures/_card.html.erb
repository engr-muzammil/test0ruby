<%= turbo_frame_tag picture, class: "col-md-4 mb-4" do %>
  <div class="card">
    <div>
    <div class="c">

      <%= link_to refresh_picture_path(picture) do %>
        <i class="float-end fa fa-refresh"></i>
      <% end %>
     
      <img
        src="<%= picture.download_url %>"
        class="card-img-top"
        alt="Waterfall"
        />
    </div>
      
      <div class="card-body">
        <div>
          <h5 class="card-title"><%= picture.author %> </h5>                
          <%= link_to favourite_picture_path(picture) do %>
          <i class="float-end fa fa-heart<%= '-o' if !picture.favourite %>"></i>
          <% end %>
        </div>

        <p class="card-text">
          <%= link_to "Show this picture", pictures_path %>
        </p>
        <a href="<%= picture.download_url %>" class="btn btn-primary">Open</a>
      </div>
    </div>
  </div>

<% end %>